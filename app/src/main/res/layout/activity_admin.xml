<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/layout_admin"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.admin.AdminActivity">

    <ImageView
        android:id="@+id/img_background_manageCategory"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/admin"
        android:contentDescription="@string/background_admin"
        android:foreground="@drawable/img_foreground"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="ImageContrastCheck" />

    <TextView
        android:id="@+id/txt_category_manager"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:padding="5dp"
        android:text="@string/administrator"
        android:textColor="@color/orange"
        android:textSize="50sp"
        android:layout_marginTop="30dp"
        android:textStyle="bold|italic"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/img_background_manageCategory" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txt_category_manager"
        app:layout_constraintVertical_bias="0.408">

        <LinearLayout
            android:id="@+id/manage_user"
            android:layout_width="370dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginBottom="10dp"
            android:background="@drawable/btn_radius"
            android:backgroundTint="@color/transparent_50"
            android:gravity="center"
            android:orientation="horizontal">

            <ImageView
                android:contentDescription="@string/user"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:background="@drawable/ic_user" />

            <TextView
                android:layout_width="220dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="@string/users"
                android:textColor="@color/white"
                android:textSize="27sp"
                android:textStyle="bold|italic" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/manage_product"
            android:layout_width="370dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginBottom="10dp"
            android:background="@drawable/btn_radius"
            android:backgroundTint="@color/transparent_50"
            android:gravity="center"
            android:orientation="horizontal">

            <ImageView
                android:contentDescription="@string/product"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:background="@drawable/ic_product" />

            <TextView
                android:layout_width="220dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="@string/products"
                android:textColor="@color/white"
                android:textSize="27sp"
                android:textStyle="bold|italic" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/manage_category"
            android:layout_width="370dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginBottom="10dp"
            android:background="@drawable/btn_radius"
            android:backgroundTint="@color/transparent_50"
            android:gravity="center"
            android:orientation="horizontal">

            <ImageView
                android:contentDescription="@string/category"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:background="@drawable/ic_category" />

            <TextView
                android:layout_width="220dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="@string/category"
                android:textColor="@color/white"
                android:textSize="27sp"
                android:textStyle="bold|italic" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/change_password"
            android:layout_width="370dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginBottom="10dp"
            android:background="@drawable/btn_radius"
            android:backgroundTint="@color/transparent_50"
            android:gravity="center"
            android:orientation="horizontal">

            <ImageView
                android:contentDescription="@string/change_password"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:background="@drawable/ic_password" />

            <TextView
                android:layout_width="220dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="@string/change_password"
                android:textColor="@color/white"
                android:textSize="27sp"
                android:textStyle="bold|italic" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/admin_to_home"
            android:layout_width="370dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginBottom="10dp"
            android:background="@drawable/btn_radius"
            android:backgroundTint="@color/transparent_50"
            android:gravity="center"
            android:orientation="horizontal">

            <ImageView
                android:contentDescription="@string/home"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:background="@drawable/ic_home" />

            <TextView
                android:layout_width="220dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="@string/home"
                android:textColor="@color/white"
                android:textSize="27sp"
                android:textStyle="bold|italic" />
        </LinearLayout>

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>