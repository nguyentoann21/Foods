<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="5dp">

    <ImageView
        android:id="@+id/img_product_menu"
        android:layout_width="match_parent"
        android:layout_height="250dp"
        android:src="@drawable/pizza_item"
        android:contentDescription="@string/all_pizza"
        android:foreground="@drawable/img_foreground"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/txt_product_item"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:text="@string/pizza"
        android:textColor="@color/white"
        android:textSize="50sp"
        android:textStyle="italic"
        android:textFontWeight="1000"
        app:layout_constraintBottom_toBottomOf="@+id/img_product_menu"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/img_product_menu" />


</androidx.constraintlayout.widget.ConstraintLayout>