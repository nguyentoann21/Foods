<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.account.RegisterActivity">

    <ImageView
        android:id="@+id/img_background_insert"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/insert_user"
        android:contentDescription="@string/add_user"
        android:foreground="@drawable/img_foreground"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="ImageContrastCheck" />

    <LinearLayout
        android:id="@+id/form_add_user"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="@+id/img_background_insert"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/img_background_insert">

        <TextView
            android:id="@+id/txt_add_user_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:gravity="center"
            android:paddingBottom="5dp"
            android:text="@string/create_user"
            android:textColor="@color/white"
            android:textSize="50sp"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/txt_add_user_username"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:autofillHints=""
            android:background="@drawable/btn_radius"
            android:backgroundTint="@color/transparent_80"
            android:drawableStart="@drawable/icon_user"
            android:drawablePadding="15dp"
            android:hint="@string/please_enter_username"
            android:inputType="text"
            android:textColor="@color/white"
            android:paddingStart="20dp"
            android:paddingTop="7dp"
            android:paddingEnd="20dp"
            android:paddingBottom="7dp"
            android:textColorHint="#78909C"
            android:textSize="20sp"
            tools:ignore="TouchTargetSizeCheck" />

        <EditText
            android:id="@+id/txt_add_user_fullName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:autofillHints=""
            android:textColor="@color/white"
            android:background="@drawable/btn_radius"
            android:backgroundTint="@color/transparent_80"
            android:drawableStart="@drawable/icon_user"
            android:drawablePadding="15dp"
            android:hint="@string/please_enter_full_name"
            android:inputType="text"
            android:paddingStart="20dp"
            android:paddingTop="7dp"
            android:paddingEnd="20dp"
            android:paddingBottom="7dp"
            android:textColorHint="#78909C"
            android:textSize="20sp"
            tools:ignore="TouchTargetSizeCheck,TextContrastCheck" />

        <EditText
            android:id="@+id/txt_add_user_password"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:autofillHints=""
            android:background="@drawable/btn_radius"
            android:backgroundTint="@color/transparent_80"
            android:drawableStart="@drawable/icon_password"
            android:drawablePadding="15dp"
            android:hint="@string/please_enter_password"
            android:inputType="textPassword"
            android:paddingStart="20dp"
            android:paddingTop="7dp"
            android:paddingEnd="20dp"
            android:paddingBottom="7dp"
            android:textColor="@color/white"
            android:textColorHint="#78909C"
            android:textSize="20sp"
            tools:ignore="TouchTargetSizeCheck,TextContrastCheck" />

        <EditText
            android:id="@+id/txt_add_user_rePassword"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:autofillHints=""
            android:background="@drawable/btn_radius"
            android:backgroundTint="@color/transparent_80"
            android:drawableStart="@drawable/icon_key"
            android:drawablePadding="15dp"
            android:textColor="@color/white"
            android:hint="@string/please_enter_re_password"
            android:inputType="textPassword"
            android:paddingStart="20dp"
            android:paddingTop="7dp"
            android:paddingEnd="20dp"
            android:paddingBottom="7dp"
            android:textColorHint="#78909C"
            android:textSize="20sp"
            tools:ignore="TouchTargetSizeCheck,TextContrastCheck" />

        <EditText
            android:id="@+id/txt_add_user_address"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:autofillHints=""
            android:textColor="@color/white"
            android:background="@drawable/btn_radius"
            android:backgroundTint="@color/transparent_80"
            android:drawableStart="@drawable/icon_address"
            android:drawablePadding="15dp"
            android:hint="@string/please_enter_address"
            android:inputType="textPostalAddress"
            android:paddingStart="20dp"
            android:paddingTop="7dp"
            android:paddingEnd="20dp"
            android:paddingBottom="7dp"
            android:textColorHint="#78909C"
            android:textSize="20sp"
            tools:ignore="TouchTargetSizeCheck" />

        <EditText
            android:id="@+id/txt_add_user_email"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:autofillHints=""
            android:textColor="@color/white"
            android:background="@drawable/btn_radius"
            android:backgroundTint="@color/transparent_80"
            android:drawableStart="@drawable/icon_email"
            android:drawablePadding="15dp"
            android:hint="@string/please_enter_email"
            android:inputType="textEmailAddress"
            android:paddingStart="20dp"
            android:paddingTop="7dp"
            android:paddingEnd="20dp"
            android:paddingBottom="7dp"
            android:textColorHint="#78909C"
            android:textSize="20sp"
            tools:ignore="TouchTargetSizeCheck" />

        <EditText
            android:id="@+id/txt_add_user_phone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="20dp"
            android:autofillHints=""
            android:textColor="@color/white"
            android:background="@drawable/btn_radius"
            android:backgroundTint="@color/transparent_80"
            android:drawableStart="@drawable/icon_phone"
            android:drawablePadding="15dp"
            android:hint="@string/please_enter_phone"
            android:inputType="textPhonetic"
            android:paddingStart="20dp"
            android:paddingTop="7dp"
            android:paddingEnd="20dp"
            android:paddingBottom="7dp"
            android:textColorHint="#78909C"
            android:textSize="20sp"
            tools:ignore="TextFields,TouchTargetSizeCheck" />

        <Button
            android:id="@+id/btn_add_user"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:background="@drawable/btn_radius"
            android:text="@string/add_user"
            android:textColor="@color/yellow"
            android:textSize="20sp"
            android:textStyle="bold"
            tools:ignore="DuplicateSpeakableTextCheck" />

        <Button
            android:id="@+id/btn_back_admin"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/btn_radius"
            android:text="@string/back"
            android:textColor="@color/white"
            android:textSize="20sp"
            android:textStyle="bold"
            tools:ignore="TextContrastCheck" />



    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>